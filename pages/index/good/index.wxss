.swiper {
    width: 750rpx;
    height: 750rpx;
}

.info {
    width: 100%;
    height: 300rpx;
    box-sizing: border-box;
    padding: 25rpx;
    border-bottom: 20rpx solid #f1f1f1;
}

.info-name {
    font-size: 35rpx;
    font-weight: bold;
    height: 35rpx;
    line-height: 35rpx;
    color: #232323;
}

.info-good {
    width: 100%;
    height: 65rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.info-good > view {
    width: 33.33%;
    height: 100%;
    display: flex;
    align-items: center;
}

.info-price {
    font-size: 35rpx;
    color: #f85537;
}

.info-through {
    text-decoration: line-through;
    color: #666666;
}

.info-cart {

}

.shop-name {

}

.shop-phone {
    width: 100%;
    position: absolute;
    bottom: 50rpx;
    right: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.content {
    padding: 25rpx;
    border-bottom: 20rpx solid #f1f1f1;
}

.state {
    width: 100%;
    box-sizing: border-box;
    padding: 25rpx;
    font-size: 24rpx;
    background: white;
    color: #808080;
}

.state-title {
    font-size: 30rpx;
    color: #434343;
}

.state-content text {
    font-weight: bold;
    color: #434343;
}

.state-content {
    margin: 10rpx 0;
}