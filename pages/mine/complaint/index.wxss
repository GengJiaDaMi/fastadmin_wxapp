.btn-box {
    position: fixed;
    width: 100%;
    height: 135rpx;
    background: white;
    left: 0;
    bottom: 0;
    box-shadow: 1px 0 5px 0 rgba(0, 27, 78, .15);
}
.btn-block {
    margin-top: 25rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
form{
    padding-top: 25rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.content{
    padding: 20rpx;
    border-radius: 15rpx;
    background-color: #fff;
    border: 1rpx solid #d7d7d7;
    width: 700rpx;
    box-sizing: border-box;
}

page{
    height: 100%;
}